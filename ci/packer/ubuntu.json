{
  "variables": {
    "aws_access_key": "",
    "aws_secret_key": "",
    "source_ami": "{{env `SOURCE_AMI`}}"
  },
  "builders": [{
    "type": "amazon-ebs",
    "access_key": "{{user `aws_access_key`}}",
    "secret_key": "{{user `aws_secret_key`}}",
    "region": "eu-west-2",
    "source_ami": "{{user `source_ami`}}",
    "instance_type": "t2.micro",
    "ssh_username": "ubuntu",
    "ami_name": "Boot Daemon, Ubuntu, 16.04 LTS, amd64 xenial image build on  {{isotime | clean_ami_name}}"
  }],
  "provisioners": [
    {
      "destination": "/tmp/",
      "source": "../../../debian-package",
      "type": "file"
    },
    {
      "type": "shell",
      "execute_command": "echo | sudo -S sh -c '{{ .Vars }} {{ .Path }}'",
      "scripts": ["scripts/install_boot_daemon.sh"]
    }
  ],
  "post-processors": [{
    "type": "manifest"
  }]
}